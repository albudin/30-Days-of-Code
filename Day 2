package DaysCode30;

/**
 *
 * @author 1413101039
 */
import java.io.*;
import java.math.*;
import java.security.*;
import java.text.*;
import java.util.*;
import java.util.concurrent.*;
import java.util.regex.*;
public class Day2 {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int tip_percent,tax_percent,total_cost;
        double meal_cost,total_meal_percent=0.0;

        meal_cost = scan.nextDouble();
        tip_percent = scan.nextInt();
        tax_percent = scan.nextInt();

        total_meal_percent = meal_cost;
        total_meal_percent = meal_cost*tip_percent/100;
        total_meal_percent = meal_cost*tax_percent/100;

        total_cost=(int)Math.round(total_meal_percent);
        System.out.println("The total meal cost is "+total_cost+" dollars.");

        scan.close();
    }
}
