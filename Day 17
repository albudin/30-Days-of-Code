import java.util.*;
import java.io.*;

//Write your code here
class Calculator
{
    int power(int n,int p)throws Exception{
        if (n>=0 && p>=0){
            int ans=n;
            for(int i=1;i<p;i++){
                ans=ans*n;
            }if(p==0){
                ans=1;
            }
            return ans;
        }
        else{
            throw new Exception("n and p should be non-negative");
        }
    }
}

class Solution{
